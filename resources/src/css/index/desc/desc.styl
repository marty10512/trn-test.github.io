.desc
  width 780px
  display flex
  flex-direction column
  color $color-dark

  &__title
    height 52px
    font-size 42px
    font-weight 600
    line-height 52px

  &__subtitle
    height 31px
    font-size 24px
    font-weight 600
    line-height 31px
    margin-top 20px

  &__paragraph
    font-size 16px
    line-height 24px

    &--first 
      margin-top 15px
    &--second 
      margin-top 30px
    &--third
      @extend .desc__paragraph--second
    &--fourth
      @extend .desc__paragraph--second
    &--fifth
      margin-top 15px
    &--sixth
      margin-top 20px

    &-list
      margin-left 55px
      line-height 24px
      
      &-item
        margin-top 20px
      
      &--first
        .desc__paragraph-list-item
          position relative
          &:before
            display block
            position absolute
            content "-"
            font-weight 700
            top -2px
            left -30px
      &--second
        margin-left 38px
        list-style decimal outside
        .desc__paragraph-list-item
          padding-left 20px
          list-style decimal outside
    
    &-link
      color $color-blue

  &__info
    margin-top 35px

    &-title
      @extend .desc__subtitle
      margin-top 0
    
    &-subtitle
      margin-top 20px
      font-size 18px
      line-height 30px
      font-weight 600

    &-paragraph
      @extend .desc__paragraph
      margin-top 5px