.table
  margin-top 30px
  display flex
  flex-direction column
  color $color-dark

  &__titles
    display flex
    flex-direction row
    border-bottom 2px solid $color-dark-white
    padding-bottom 4px
    
    &-item
      font-size 18px
      line-height 23px
      font-weight 600

  &-item
    &--first
      width 74px
      margin-left 20px
    &--second
      width 74px
      margin-left 108px
    &--third
      width 74px
      margin-left 147px
    &--fourth
      width 74px
      margin-left 128px
  
  &__content
    margin-top 20px
    padding-bottom 20px
    display flex
    flex-direction row
    border-bottom 1px solid $color-dark-white
    &:last-child
      border-bottom none