.elements
  width 1181px
  height 226px

  &__title
    @extend .listing__title

  &-content 
    margin-top 55px
    display flex
    flex-direction row
    justify-content space-between

    &__btn
      width 129px
      height 40px
      line-height 40px
      font-size 16px
  
    &__switch
      display flex
      flex-direction row
      width 146px

      &:hover

        .btn
          border-color $color-blue
          color $color-blue
          background-color #fff

        .btn--opposite
          border-color $color-grey
          color #fff
          background-color $color-grey

      &-btn
        width 70px
        height 30px
        line-height 30px

        &--left
          border-radius 6px 0 0 6px
        &--right
          border-radius 0 6px 6px 0

    &__choice 
      height 40px
      width 320px
      position relative

      &-form
        width 100%
        height 100%
        border 1px solid $color-light-grey
        border-radius 6px
        color $color-light-grey
        line-height 40px
        font-size 16px
        font-weight 600
        padding-left 15.5px
        position relative
        cursor pointer
        transition .3s

        &:after
          position absolute
          display block
          content ""
          top 50%
          transform translateY(-25%)
          right 15px
          border 7.28px solid #fff
          border-top-color $color-grey
          transition .3s

        &:hover
          border-color $color-blue
          color $color-blue

          &:after
            border-top-color $color-blue
          
      .active
        display block
      
      &-list
        display none
        position absolute
        height 160px
        overflow auto
        bottom -160px
        width 100%
        border 1px solid $color-light-grey
        border-radius 6px
        color $color-grey
        background-color #fff
        line-height 40px
        font-size 16px
        font-weight 600

        .active
          color $color-grey

        &-item
          padding-left 15.5px
          cursor pointer
          &:hover
            background-color $color-dark-white