.choice 
  height 40px
  width 320px
  position relative
  cursor pointer

  .chosen
    color $color-dark

  &-form
    width 100%
    height 100%
    border 1px solid $color-light-grey
    border-radius 6px
    color $color-light-grey
    line-height 40px
    font-size 16px
    font-weight 600
    padding-left 15.5px
    position relative
    transition .3
    &:after
      position absolute
      display block
      content ""
      top 50%
      transform translateY(-25%)
      right 15px
      border 7.28px solid #fff
      border-top-color $color-grey
      transition .3
    &:hover
      border-color $color-blue
      color $color-blu
      &:after
        border-top-color $color-blue
      
  .active
    display block
  
  &__list
    display none
    position absolute
    height 160px
    overflow auto
    bottom -160px
    width 100%
    border 1px solid $color-light-grey
    border-radius 6px
    color $color-grey
    background-color #fff
    line-height 40px
    font-size 16px
    font-weight 60
    .active
      color $color-dark
    &-item
      padding-left 15.5px
      cursor pointer
      &:hover
        background-color $color-dark-white

