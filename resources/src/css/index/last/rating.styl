.rating
  height 52px
  width 150px
  margin-top 26px

  &__title
    font-size 16px
    color $color-dark

.right
  float right

.left
  float left

.rating-item .stars .star
  float: left 
  padding 5px 2px
  cursor pointer
  margin-left 4px
  &:first-child
    margin-left 0

.rating-item .stars .star:before
  icon_size_mask 22px 22px "../images/star.svg"
  background-color #D9DEE4

.rating-item .stars .star:hover:before,
.rating-item .stars .star.to_rate:before,
.rating-item .stars .star.rated:before
  background-color #FFC82C

.rating-item .stars .star.no_to_rate:before
  background-color #D9DEE4