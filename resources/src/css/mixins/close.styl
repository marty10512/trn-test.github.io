.close
  height 30px
  width 30px
  cursor pointer

  
  &__item
    position relative
    width 100%
    height 100%

    &:after
      display block
      position absolute
      content ""
      width 17px
      border 1.5px solid $color-light-grey
      border-radius 25%
      top 50%
      left 50%
      transform translate(-50%, -50%)rotate(-45deg)

    &:before
      display block
      position absolute
      content ""
      width 17px
      border 1.5px solid $color-light-grey
      border-radius 25%
      top 50%
      left 50%
      transform translate(-50%, -50%)rotate(45deg)
