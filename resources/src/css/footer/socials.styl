.socials
  width 150px

  &__title
    color $color-dark
    font-size 16px
    font-weight 700
  
  &__list
    margin-top 12px
    display flex
    justify-content space-between

    .list-item
      width 42px
      height 42px
      display flex
      flex-direction column
      justify-content center
      align-items center
      border 3px solid $color-light-grey
      border-radius 50%
      transition .3s
  
      &:hover
        border 2.5px solid $color-light-blue
        .socials__fb
          background-color $color-blue
        .socials__gp
          background-color $color-blue
        .socials__tw
          background-color $color-blue
  &__fb
    transition .3s
    icon_size_mask 8px, 16px, "../images/fb.svg"
    background-color $color-grey
  &__gp
    transition .3s
    icon_size_mask 15px, 17px, "../images/g+.svg"
    background-color $color-grey
  &__tw
    transition .3s
    icon_size_mask 15.5px, 15px, "../images/tw.svg"
    background-color $color-grey