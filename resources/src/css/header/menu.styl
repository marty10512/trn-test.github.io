@import "../mixins/colors.styl"
.header
    
    &__menu
        margin-left 10%
        display flex
        flex-direction row
        height 100%
        width 332px
        justify-content space-between
        line-height 66px
        font-size 18px
        font-weight 600

        &-item
            width 80px
            display flex
            justify-content center
            transition .3s
            color $color-grey
            border 2.5px solid transparent
            position relative

            &:hover
                color $color-blue
                border-top-color $color-blue 

                &:after
                    border-top-color $color-blue

            &:after
                display block
                content ""
                position absolute
                border 5px solid transparent
                border-top-color $color-grey
                right -5px
                top 56%
                transition .3s

            &:before
                display none
                content ""
                position absolute
                border 5px solid transparent
                border-bottom-color $color-dark
                right -5px
                top 49%
                transition .3s

            
            &--active
                color $color-dark
                .header__dropdown
                    display flex

                &:hover 
                    color unset
                    border-top-color #fff
                
                &:after
                    display none
                &:before
                    display block

    &__dropdown
        position absolute
        width 121px
        height 110px
        top 60px
        display none
        flex-direction column
        justify-content space-evenly
        align-items center
        border-radius 6px
        box-shadow 0 2px 5px rgba(0,0,0,0.5)
        line-height 20px
        color $color-grey

        &-item
            width 78px
            height 20px
            display flex
            justify-content center

            &:hover
                width 100px
                color $color-dark
        
        &-link
            font-size 16px
            &:hover
                font-size 18px

        &:after
            position absolute
            content ""
            height 0px
            width 0px
            display block
            border 13px solid transparent
            border-bottom-color rgba(0,0,0,0.03)
            top -25px

        &:before
            position absolute
            content ""
            height 0px
            width 0px
            display block
            border 11px solid transparent
            border-bottom-color #fff
            top -21px
            z-index 1