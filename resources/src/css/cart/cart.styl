.shoping-cart
  width 100%

  &__title
    height 60px
    width 100%
    background-color $color-white
    margin-bottom 5px
    &-item
      line-height 60px
      font-size 22px
      font-weight 700
      text-transform uppercase
      color $color-dark
      margin-left 20px
  
  &__list
    display flex
    flex-direction column
    width 100%

    &-titles
      border-bottom 2px solid $color-dark-white

      .list-titles
        display grid
        grid-template-columns 10% 10% 40% 15% 10% 10%

        &__item
          font-size 18px
          font-weight 600
          line-height 40px
          color $color-dark
          text-align center
          &--prod
            text-align start
            padding-left 70px
    
    &-item
      display grid
      grid-template-columns 10% 10% 40% 15% 10% 10%
      height 124px

      .list-item__btn
        height 25px
        width 25px
        margin auto
      
      .list-item__pic
        display block
        height 65px
        width 90px
        border-radius 6px
        object-fit cover
        margin auto
      
      .list-item__name
        color $color-dark
        font-size 18px
        font-weight 600
        margin auto 0 auto 70px

      .list-item__price
        color $color-dark
        font-size 18px
        font-weight 600
        margin auto
      
      .list-item__quantity
        height 50px
        width 71px
        margin auto
        color $color-dark
        font-size 18px
        font-weight 600
        text-align center
        border 1px solid $color-dark-white
        border-radius 6px
        transition .3s
        &:focus
          border-color $color-blue

      .list-item__total
        color $color-dark
        font-size 18px
        font-weight 600
        margin auto
  
  &__btns
    width 100%
    height 84px
    background-color $color-white
    display flex
    flex-direction row
    justify-content flex-end
    margin-bottom 61px

    .btns__update
      height 40px
      width 129px
      line-height 40px
      font-size 16px 
      font-weight 600
      margin auto 0
      font-family "Source Sans Pro"

    .btns__continue
      height 40px
      width 197px
      line-height 40px
      font-size 16px 
      font-weight 600
      margin auto 10px auto 30px
      font-family "Source Sans Pro"
  
  &__cheque
    height 396px
    width 381px
    background-color $color-white
    margin-left auto
    padding 20px 25px 26px 25px

    .cheque-list
      height 147px
      width 100%
      display flex
      flex-direction column
      margin-bottom 10px

      &__item
        display flex
        flex-direction row
        font-size 16px
        line-height 49px
        color $color-dark

        .item__price
          margin-left auto
  
    .cheque-total
      height 60px
      display flex
      flex-direction row
      color $color-dark
      font-weight 600
      font-size 28px
      line-height 60px
      border-top 1px solid $color-dark-white 
      border-bottom 1px solid $color-dark-white 
      margin-bottom 21px
      &__price
        margin-left auto
    
    .cheque-notice
      display flex
      flex-direction row
      margin-bottom 34px

      &__btn
        height 25px
        width 25px
      
      &__text
        width 307px
        margin-left 8px
        font-size 16px
        line-height 18px
        color $color-dark

        &-link
          color $color-blue

    .cheque-btn
      height 43px
      width 331px
      line-height 43px
      text-transform uppercase
      font-weight 600
      font-size 16px