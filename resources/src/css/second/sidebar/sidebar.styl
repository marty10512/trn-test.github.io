.sidebar
  width 280px
  display flex
  flex-direction column

  &__title
    @extend .listing__title
    height 60px
    width 280px
    background-color $color-white
    line-height 60px
    text-align center

  &__navigation
    height 305px
    width 280px

    &-item
      width 100%
      height 61px
      font-size 18px
      color $color-grey
      line-height 61px
      text-transform uppercase
      cursor pointer
      transition .3s

      &:hover
        color $color-blue