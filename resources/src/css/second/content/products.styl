.products
  width 100%
  
  &__list
    display grid

    .list-item
      display flex

      &__pic
        display block
        height 189px
        width 281px
        border-radius 6px
        object-fit cover
        margin-bottom 10px

      &__desc
        display flex
        flex-direction column
      
        .desc-title
          line-height 28px
          color $color-dark
          font-size 22px
          font-weight 600
          margin-bottom 5px
          transition .3s
          &:hover
            color $color-blue

        .desc-rating 
          display none
          margin-bottom 15px

          &__star
            position relative
            height 18px
            width 18px
            margin-right 4px
            &:after
              display block
              position absolute
              content ""
              top 50%
              left 50%
              transform translate(-50%, -50%)
              icon_size_mask 18px, 18px, '../images/star.svg'
              background-color $color-yellow
            &--unmarked:after
              background-color $color-grey

        .desc-text
          display none
          color $color-dark
          line-height 24px
          font-size 18px
          margin-bottom 5px


        .desc-price
          line-height 23px
          font-size 18px
          font-weight 600
          color $color-red
          margin-bottom 18px

        .desc-btn
          @extend .btn--opposite
          height 50px
          margin-bottom 20px
          line-height 50px
          font-size 18px
          font-weight 600
          text-align center

  &--tile
    .products__list
      grid-template-rows repeat(2, 1fr)
      grid-template-columns repeat(3, 1fr)
      grid-gap 20px

      .list-item
        flex-direction column

  &--list
    .products__list
      grid-template-rows repeat(6, 1fr)
      grid-template-columns 1fr
      grid-gap 50px

      .list-item
        flex-direction row

        &__desc 
          margin-left 20px
        .desc-title
          margin-bottom 7px

        .desc-rating 
          display flex
          flex-direction row

        .desc-text
          display block
        
        .desc-price
          margin-bottom 19px

        .desc-btn
          width 280px