.content__sort
  width 100%
  height 60px
  display flex
  flex-direction row
  margin-bottom 23px

  .sort
    &-type
      display flex
      flex-direction row
      width 180px
      position relative

      &__title
        width 50%
        height 61px
        font-size 18px
        color $color-grey
        line-height 61px
        text-transform uppercase
        transition .3s
        cursor default
        text-align center
        &:hover
          color $color-grey

      &__item
        height 61px
        font-size 18px
        line-height 61px
        text-transform uppercase
        cursor pointer
        transition .3s
        color $color-dark
        width 50%
        text-align center 
        &:after
          position absolute
          display block
          content ""
          top 50%
          transform translateY(-50%)
          left 100%
          border 6px solid transparent
          border-top-color $color-dark
          transition .3s

        &:hover
          color $color-blue
          &:after
            border-top-color $color-blue

      &__list
        display none
        position absolute
        top 100%
        right 0
        background-color #fff
        padding 10px
        box-shadow 0 2px 4px rgba(59,72,88,.4)
        border-radius 6px

        .type-list-item
          width 100%
          font-size 18px
          text-transform uppercase
          cursor pointer
          transition .3s
          color $color-dark
          height 20px
          line-height 20px
          &:hover
            color $color-blue

    &-display
      display flex
      flex-direction row
      width 180px
      position relative
      margin-left 88px

      &__title
        width 50%
        height 61px
        font-size 18px
        color $color-grey
        line-height 61px
        text-transform uppercase
        transition .3s
        cursor default
        text-align center
        &:hover
          color $color-grey

      &__item
        height 61px
        font-size 18px
        line-height 61px
        text-transform uppercase
        cursor pointer
        transition .3s
        color $color-dark
        width 50%
        text-align center 
        &:after
          position absolute
          display block
          content ""
          top 50%
          transform translateY(-50%)
          left 102%
          border 6px solid transparent
          border-top-color $color-dark
          transition .3s
        &:hover
          color $color-blue
          &:after
            border-top-color $color-blue

      &__list
        display none
        position absolute
        top 100%
        right 0
        background-color #fff
        padding 10px
        box-shadow 0 2px 4px rgba(59,72,88,.4)
        border-radius 6px

        .sort-list-item
          width 100%
          font-size 18px
          text-transform uppercase
          cursor pointer
          transition .3s
          color $color-dark
          height 20px
          line-height 20px
          &:hover
            color $color-blue

    
    &-view
      margin-left auto
      display flex
      flex-direction row

      &__list
        position relative
        height 25px
        width 30px
        margin auto
        margin-right 17px
        cursor pointer


        &:after
          display block
          content ""
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          transition .3s
          icon_size_mask 30px, 25px, "../images/btns/list.svg"
          background-color $color-grey

        &:hover:after
          background-color $color-blue

      &__tile
        position relative
        height 25px
        width 30px
        margin auto
        cursor pointer

        &:after
          display block
          content ""
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          transition .3s
          icon_size_mask 30px, 25px, "../images/btns/tile.svg"
          background-color $color-grey

        &:hover:after
          background-color $color-blue

      .active:after
        background-color $color-blue
  
  .active
    .sort-type__list
      display block
    .sort-type__item:after
      top 40%
      transform translateY(-50%) rotate(180deg)
    .sort-display__list
      display block
    .sort-display__item:after
      top 40%
      transform translateY(-50%) rotate(180deg)
